FROM ahannigan/docker-arachni



RUN echo '#!/bin/bash \n\
set +x \n\
rm /tmp/arachni/neighbor_ip \n\
export HOST_IP=$(ip addr show dev eth0 | grep "inet " | awk "{print \$2}" | cut -d "/" -f 1) \n\
bin/arachni_web \n\
' > /var/webui-node.sh
RUN chmod 755 /var/webui-node.sh



CMD ["/bin/bash", "/var/webui-node.sh"]